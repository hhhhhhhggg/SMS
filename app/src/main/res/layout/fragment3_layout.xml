<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lansetiankongweimei1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:background="@mipmap/title_bg">

        <ImageView
            android:id="@+id/personage_head"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/head_view"
            android:scaleType="center"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/personage_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:layout_toRightOf="@id/personage_head"
            android:text="60px"
            android:textColor="#ffffff"
            android:textSize="60px" />

        <TextView
            android:id="@+id/personage_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personage_name"
            android:layout_marginTop="50px"
            android:layout_toRightOf="@id/personage_head"
            android:background="@drawable/textview_lace"
            android:paddingBottom="8px"
            android:paddingLeft="16px"
            android:paddingRight="16px"
            android:paddingTop="8px"
            android:text="40px"
            android:textColor="#ffffff"
            android:textSize="40px" />

        <ImageView
            android:layout_width="144px"
            android:layout_height="144px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin"
            android:src="@mipmap/icon_back2" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin"
            android:text="每日签到送积分"
            android:textSize="50px" />

        <TextView
            android:id="@+id/personage_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/signin_view"
            android:paddingBottom="32px"
            android:paddingLeft="64px"
            android:paddingRight="64px"
            android:paddingTop="32px"
            android:text="签到"
            android:textColor="#ffffff"
            android:textSize="50px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:background="#ffffff">

        <TextView
            android:id="@+id/myself_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin"
            android:drawablePadding="16px"
            android:gravity="center"
            android:text="我的订单"
            android:textSize="50px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin"
            android:drawablePadding="24px"
            android:drawableRight="@drawable/myb"
            android:gravity="center"
            android:text="查看全部订单"
            android:textSize="40px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin"
        android:weightSum="4">

        <TextView
            android:id="@+id/myself_tv2"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="16px"
            android:gravity="center"
            android:text="待付款" />

        <TextView
            android:id="@+id/myself_tv3"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="16px"
            android:gravity="center"
            android:text="待发货" />

        <TextView
            android:id="@+id/myself_tv4"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="16px"
            android:gravity="center"
            android:text="待收货" />

        <TextView
            android:id="@+id/myself_tv5"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="16px"
            android:gravity="center"
            android:text="待退款" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:background="#ffffff"
        android:padding="@dimen/margin"
        android:text="管理"
        android:textSize="50px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_marginTop="16px"
            android:layout_weight="1">

            <TextView
                android:id="@+id/myself_tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin"
                android:drawablePadding="32px"
                android:gravity="center"
                android:text="购物车管理"
                android:textColor="#ffffff"
                android:textSize="50px" />

            <TextView
                android:id="@+id/personage_manage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin"
                android:drawablePadding="24px"
                android:drawableRight="@drawable/myb"
                android:gravity="center"
                android:text="查看全部订单"
                android:textColor="#ffffff"
                android:textSize="50px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_marginTop="16px"
            android:layout_weight="1">

            <TextView
                android:id="@+id/myself_tv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin"
                android:drawablePadding="32px"
                android:gravity="center"
                android:text="我的积分"
                android:textColor="#ffffff"
                android:textSize="50px" />

            <TextView
                android:id="@+id/personage_manage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin"
                android:drawablePadding="24px"
                android:drawableRight="@drawable/myb"
                android:gravity="center"
                android:text="查看全部订单"
                android:textColor="#ffffff"
                android:textSize="50px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_marginTop="16px"
            android:layout_weight="1">

            <TextView
                android:id="@+id/myself_tv8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin"
                android:drawablePadding="32px"
                android:gravity="center"
                android:text="收货地址"
                android:textColor="#ffffff"
                android:textSize="50px" />

            <TextView
                android:id="@+id/personage_manage3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin"
                android:drawablePadding="24px"
                android:drawableRight="@drawable/myb"
                android:gravity="center"
                android:text="查看全部订单"
                android:textColor="#ffffff"
                android:textSize="50px" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
