<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3e3e3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:background="@mipmap/title_bg">

        <ImageView
            android:id="@+id/personage_head"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/head_view"
            android:scaleType="center"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/personage_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:layout_toRightOf="@id/personage_head"
            android:text="60px"
            android:textColor="#ffffff"
            android:textSize="60px" />

        <TextView
            android:id="@+id/personage_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personage_name"
            android:layout_marginTop="50px"
            android:layout_toRightOf="@id/personage_head"
            android:background="@drawable/textview_lace"
            android:paddingBottom="8px"
            android:paddingLeft="16px"
            android:paddingRight="16px"
            android:paddingTop="8px"
            android:text="40px"
            android:textColor="#ffffff"
            android:textSize="40px" />

        <ImageView
            android:layout_width="144px"
            android:layout_height="144px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin"
            android:src="@mipmap/icon_back2" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin"
            android:text="每日签到送积分"
            android:textSize="50px" />

        <TextView
            android:id="@+id/personage_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/signin_view"
            android:paddingBottom="16px"
            android:paddingLeft="32px"
            android:paddingRight="32px"
            android:paddingTop="16px"
            android:text="签到"
            android:textColor="#ffffff"
            android:textSize="40px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin"
            android:drawableLeft="@mipmap/ic_launcher"
            android:gravity="center"
            android:text="我的订单"
            android:textSize="50px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin"
            android:drawableRight="@mipmap/ic_launcher"
            android:gravity="center"
            android:text="查看全部订单"
            android:textSize="40px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin"
        android:weightSum="4">

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_launcher"
            android:gravity="center"
            android:text="待付款" />

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_launcher"
            android:gravity="center"
            android:text="待发货" />

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_launcher"
            android:gravity="center"
            android:text="待收货" />

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_launcher"
            android:gravity="center"
            android:text="待退款" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:background="#ffffff"
        android:padding="@dimen/margin"
        android:text="管理"
        android:textSize="50px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:layout_marginTop="16px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin"
                android:drawableLeft="@mipmap/ic_launcher"
                android:gravity="center"
                android:text="我的订单"
                android:textSize="45px" />

            <TextView
                android:id="@+id/personage_manage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin"
                android:drawableRight="@mipmap/ic_launcher"
                android:gravity="center"
                android:text="查看全部订单"
                android:textSize="40px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:layout_marginTop="16px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin"
                android:drawableLeft="@mipmap/ic_launcher"
                android:gravity="center"
                android:text="我的订单"
                android:textSize="45px" />

            <TextView
                android:id="@+id/personage_manage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin"
                android:drawableRight="@mipmap/ic_launcher"
                android:gravity="center"
                android:text="查看全部订单"
                android:textSize="40px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:layout_marginTop="16px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin"
                android:drawableLeft="@mipmap/ic_launcher"
                android:gravity="center"
                android:text="我的订单"
                android:textSize="45px" />

            <TextView
                android:id="@+id/personage_manage3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin"
                android:drawableRight="@mipmap/ic_launcher"
                android:gravity="center"
                android:text="查看全部订单"
                android:textSize="40px" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
